<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ bigfoot_theme_values.title }}</title>

    <link rel="stylesheet" href="{{ asset('bundles/bigfootcore/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/bigfootcore/css/font-awesome.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/bigfootcore/css/screen.css') }}" />
</head>
<body>
<div class="container">
    <div class="content">
        <div class="row">
            <div class="login-form">
                <h2>{{ 'Login' | trans }}</h2>
                <form action="{{ path('admin_login_check') }}" method="post">
                    <fieldset>
                        {% if error %}
                            <div>{{ error.message }}</div>
                        {% endif %}
                        <div class="form-group">
                            <input type="text" name="_username" value="{{ last_username }}" placeholder="Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="_password" value="" placeholder="Password" class="form-control">
                        </div>
                        <button class="btn btn-primary" type="submit">{{ 'Login' | trans }}</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div> <!-- /container -->
</body>
</html>